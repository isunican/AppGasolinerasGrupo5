<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.FilterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona los filtros a utilizar en la búsqueda" />

        <Space
            android:id="@+id/space1"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/btnAceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/tablaFiltros"
            android:layout_alignRight="@id/tablaFiltros"
            android:layout_marginTop="650dp"
            android:layout_marginRight="30dp"
            android:elevation="0dp"
            android:text="Aceptar"
            android:visibility="visible"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btnGuardarConfig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tablaFiltros"
            android:layout_alignEnd="@id/tablaFiltros"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="650dp"
            android:layout_marginRight="140dp"
            android:text="Guardar configuración de filtros" />

        <TableLayout
            android:id="@+id/tablaFiltros"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/space1"
            android:layout_marginBottom="100dp"
            android:gravity="start">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textFavoritos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Favoritos" />

                <CheckBox
                    android:id="@+id/checkFavoritos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textTipoCombustible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Tipo de combustible" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Switch
                        android:id="@+id/switchGasoil"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:text="Gasoil" />

                    <Switch
                        android:id="@+id/switchGasolina"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:text="Gasolina" />
                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textMarca"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Marca" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/spinnerMarca"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="visible"
                        tools:visibility="visible" />
                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textProvincia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Provincia" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/spinnerProvincia"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="visible"
                        tools:visibility="visible" />
                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textDistancia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Distancia"
                    android:visibility="visible" />

                <CheckBox
                    android:id="@+id/checkDistancia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0dp"
                    android:layout_weight="0"
                    android:visibility="visible"
                    tools:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0">

                        <RadioButton
                            android:id="@+id/radioButtonMayor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mayor a" />

                        <RadioButton
                            android:id="@+id/radioButtonMenor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Menor a" />

                    </RadioGroup>

                    <EditText
                        android:id="@+id/editTextNumberDecimal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:ems="6"
                        android:inputType="numberDecimal" />

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textPrecio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Ordenar por precio" />

                <CheckBox
                    android:id="@+id/checkPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/radioButtonAsc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Mayor a menor"
                            android:visibility="visible" />

                        <RadioButton
                            android:id="@+id/radioButtonDesc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Menor a mayor"
                            android:visibility="visible" />
                    </RadioGroup>
                </LinearLayout>

            </TableRow>

        </TableLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>